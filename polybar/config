[bar/top]
width = 100%
height = 34
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = MesloLGSDZ Nerd Font:weight=bold:pixelsize=14

modules-left = cpu memory network-usage
modules-center = cmus
#modules-right = updates ping net
modules-right = ping net

# Uncomment to enable tray
tray-position = right
tray-padding = 1

[module/cpu]
type = internal/cpu
interval = 0.25
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
