[module/cmus]
type = custom/script

format = <label>
format-foreground = ${colors.foreground}
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

exec = .dotfiles/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1

click-left = cmus-remote --pause
click-right = cmus-remote --stop

[module/updates]
type = custom/script

interval = 60
format = <label>
format-foreground = ${colors.foreground}
format-prefix = " "
format-prefix-foreground = #8be9fd
exec = .dotfiles/polybar/updates.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/ping]
type = custom/script

interval = 5
format = <label>
format-foreground = ${colors.foreground}
exec = .dotfiles/polybar/ping.sh

[module/net]
type = custom/script

interval = 1
format = <label>
format-foreground = ${colors.foreground}
