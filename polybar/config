[colors]
background = #00282a36
foreground = #666666
icon = #ffffff

i3-focused = #aaaaaa
i3-unfocused = #333333
i3-urgent = #ffffff

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[bar/top]
width = 100%
height = 32
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = MesloLGSDZ Nerd Font:weight=bold:pixelsize=14

modules-left = i3
modules-right = updates net date time weather volume battery

#modules-center = cmus
#modules-right = updates ping net

# Uncomment to enable tray
tray-position = right
tray-padding = 1

[module/ncmpcpp]
type = custom/script

format = <label>
format-foreground = ${colors.foreground}

exec = .dotfiles/polybar/ncmpcpp.sh
exec-if = pgrep -x ncmpcpp
interval = 1

click-left = mpc toggle
click-right = mpc stop

[module/updates]
type = custom/script

interval = 5
format = <label>
format-foreground = ${colors.foreground}
exec = .dotfiles/polybar/updates.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/net]
type = custom/script

interval = 1

format = <label>
format-foreground = ${colors.foreground}

exec = .dotfiles/polybar/net.sh

[module/i3]
type = internal/i3

ws-icon-default = 
ws-icon-0 = 0:terminal;
ws-icon-1 = 100:web;
ws-icon-2 = 101:music;

pin-workspaces = true
strip-wsnumbers = true
index-sort = true

format = <label-state>
format-padding-right = 2
label-unfocused-foreground = ${colors.i3-unfocused}
label-unfocused-padding = 1
label-focused-foreground = ${colors.i3-focused}
label-focused-padding = 1
label-urgent-foreground = ${colors.i3-urgent}
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 1
date = %a %d
format = <label>
label = %date%
format-prefix = " "
format-prefix-foreground = ${colors.icon}

[module/time]
type = internal/date
interval = 1
time = %H:%M
format = <label>
label = %time%
format-prefix = " "
format-prefix-foreground = ${colors.icon}

[module/weather]
type = custom/script
interval = 120

format = <label>
format-foreground = ${colors.foreground}
format-prefix = " "
format-prefix-foreground = ${colors.icon}

exec = .dotfiles/polybar/weather.sh

[module/battery]
type = internal/battery

battery = BAT1
adapter = ACAD

poll-interval = 3

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> Full

ramp-capacity-foreground = ${colors.icon}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-foreground = ${colors.icon}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

animation-charging-framerate = 750

[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>

format-muted-prefix = " "
format-muted-prefix-foreground = ${colors.icon}
label-muted = muted

ramp-volume-foreground = ${colors.icon}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

