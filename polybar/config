label-urgent-foreground = ${colors.i3-urgent}
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 1
date = %a %b %d,
time = %H:%M:%S
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
format = <label>
label = %date% %time%
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

[module/weather]
type = custom/script
interval = 120

