[bar/bottom]
width = 100%
height = 30
fixed-center = true

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = MesloLGSDZ Nerd Font:weight=bold:pixelsize=12

modules-left = i3
modules-center = date
modules-right = weather battery

tray-position = right
tray-padding = 2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3

ws-icon-default = 
ws-icon-0 = web;
ws-icon-1 = music;

pin-workspaces = true
strip-wsnumbers = true
index-sort = true

format = <label-state>
format-padding-right = 2
label-unfocused-foreground = ${colors.i3-unfocused}
label-unfocused-padding = 1
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1
label-urgent-foreground = ${colors.i3-urgent}
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 1
date = %a %b %d,
time = %H:%M:%S
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
format = <label>
label = %date% %time%
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

[module/weather]
type = custom/script
interval = 120
format = <label>
exec = .dotfiles/polybar/weather.sh
click-left = google-chrome-stable --app="http://www.accuweather.com/pl/pl/podrzecze/1393494/weather-forecast/1393494"

[module/battery]
type = internal/battery

full-at = 99

battery = BAT1
adapter = ACAD

poll-interval = 5

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging> <label-charging>

; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-discharging = <ramp-capacity> <label-discharging>

; Available tags:
;   <label-full> (default)
;   <bar-capacity>
;   <ramp-capacity>
;format-full = <ramp-capacity> <label-full>

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = Charging %percentage%%

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging = Discharging %percentage%%

; Available tokens:
;   %percentage% (default)
label-full = Fully charged

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

