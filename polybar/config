[colors]
background = #282a36
foreground = #f8f8f2
foreground-alt = #bd93f9

i3-unfocused = #44475a
i3-urgent = #ffb86c

[bar/bottom]
width = 100%
height = 30
fixed-center = true

bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = FuraMonoForPowerline Nerd Font:pixelsize=12

modules-left = i3
modules-center = date
modules-right = weather

tray-position = right
tray-padding = 2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3

ws-icon-default = 
ws-icon-0 = web;%{F#f1fa8c}%{F-}
ws-icon-1 = music;%{F#50fa7b}%{F-}
pin-workspaces = true
strip-wsnumbers = true
index-sort = true

format = <label-state>
format-padding-right = 2
label-unfocused-foreground = ${colors.i3-unfocused}
label-unfocused-padding = 1
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1
label-urgent-foreground = ${colors.i3-urgent}
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 1
date = %a %b %d,
time = %H:%M:%S
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
format = <label>
label = %date% %time%
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

[module/weather]
type = custom/script
interval = 120
format = <label>
exec = .dotfiles/polybar/weather.sh
click-left = google-chrome-stable --app="http://www.accuweather.com/pl/pl/podrzecze/1393494/weather-forecast/1393494"

