[colors]
background = #44000000
foreground = ${xrdb:foreground}
icon = ${xrdb:color10}
inactive = ${xrdb:color8}

i3-focused = ${xrdb:color10}
i3-unfocused = ${xrdb:foreground}
i3-urgent = ${xrdb:color11}

[bar/top]
width = 100%
height = 36
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = Fira Code:weight=semibold:pixelsize=14
font-1 = FontAwesome:pixelsize=18

modules-left = wifi net updates
modules-center = i3
modules-right = weather date time dropbox headphones volume battery

#tray-position = right
#tray-padding = 2

[module/i3]
type = internal/i3

ws-icon-default = 
ws-icon-0 = 0:terminal;
ws-icon-1 = 100:web;
ws-icon-2 = 101:code;
ws-icon-3 = 102:music;

pin-workspaces = true
strip-wsnumbers = true
index-sort = true

format = <label-state>
format-padding-right = 2

label-unfocused = %icon%
label-unfocused-foreground = ${colors.i3-unfocused}
label-unfocused-padding = 1

label-focused = %icon%
label-focused-foreground = ${colors.i3-focused}
label-focused-padding = 1

label-urgent = %icon%
label-urgent-foreground = ${colors.i3-urgent}
label-urgent-padding = 1

[module/wifi]
type = internal/network
interface = wlp2s0

interval = 1

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.icon}
format-connected = <label-connected>

label-connected = %essid%
label-connected-foreground = ${colors.foreground}

[module/updates]
type = custom/script

interval = 5
format = <label>
format-foreground = ${colors.foreground}
exec = .dotfiles/polybar/updates.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/net]
type = custom/script

interval = 1

format = <label>
format-foreground = ${colors.foreground}

exec = .dotfiles/polybar/net.sh

[module/weather]
type = custom/script
interval = 30

format = <label>
format-foreground = ${colors.foreground}

exec = .dotfiles/polybar/weather.sh

[module/date]
type = internal/date
interval = 1
date = %a %d
format = <label>
label = %date%
format-prefix = " "
format-prefix-foreground = ${colors.icon}

[module/time]
type = internal/date
interval = 1
time = %H:%M
format = <label>
label = %time%
format-prefix = " "
format-prefix-foreground = ${colors.icon}

[module/dropbox]
type = custom/script
interval = 10

format = <label>

exec = .dotfiles/polybar/dropbox.sh


[module/headphones]
type = custom/script
interval = 2

format = <label>

exec = .dotfiles/polybar/headphones.sh

[module/volume]
type = internal/volume

format-volume = <ramp-volume>
label-muted = 
label-muted-foreground = ${colors.inactive}

ramp-volume-foreground = ${colors.icon}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery

battery = BAT1
adapter = ACAD

poll-interval = 3

format-charging = <animation-charging>
format-discharging = <ramp-capacity>
format-full = <ramp-capacity>
#format-charging = <animation-charging> <label-charging>
#format-discharging = <ramp-capacity> <label-discharging>
#format-full = <ramp-capacity> Full

ramp-capacity-foreground = ${colors.icon}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

