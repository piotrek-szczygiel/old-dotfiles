bar-used-foreground-1 = #557755
bar-used-foreground-2 = #f5a70a
bar-used-foreground-3 = #ff5555
bar-used-fill = ▐
bar-used-empty = ▐
bar-used-empty-foreground = #444444

[module/cmus]
type = custom/script

format = <label>
format-foreground = ${colors.foreground}

exec = .dotfiles/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 1

click-left = cmus-remote --pause
click-right = cmus-remote --stop

[module/updates]
type = custom/script

interval = 5
format = <label>
format-foreground = ${colors.foreground}
exec = .dotfiles/polybar/updates.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/ping]
type = custom/script

interval = 1

format = <label>
format-foreground = ${colors.foreground}

exec = .dotfiles/polybar/ping.sh

[module/net]
type = custom/script

interval = 1

format = <label>
format-foreground = ${colors.foreground}

exec = .dotfiles/polybar/net.sh

