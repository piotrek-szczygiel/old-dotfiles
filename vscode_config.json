{
    // Basic vscode configuration
    "editor.dragAndDrop": false,
    "editor.fontFamily": "Source Code Pro",
    "editor.fontSize": 18,
    "editor.fontWeight": "400",
    "editor.formatOnPaste": true,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [80],
    //Files settings
    "files.trimTrailingWhitespace": true,
    // Launch vscode-remote rmate server on startup
    "remote.onstartup": true,
    // Terminal settings
    "terminal.integrated.fontFamily": "MesloLGSDZ Nerd Font",
    // Workbench settings
    "workbench.colorTheme": "Spacemacs - light",
    "workbench.iconTheme": "vscode-icons",
    "workbench.welcome.enabled": false,
    // Vim settings
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.easymotion": true,
    "vim.easymotionMarkerFontFamily": "Source Code Pro",
    "vim.easymotionMarkerFontSize": "17",
    "vim.easymotionMarkerHeight": 17,
    "vim.easymotionMarkerWidthPerChar": 12,
    "vim.easymotionMarkerYOffset": 13,
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-b>": false,
        "<C-c>": false,
        "<C-f>": false,
        "<C-k>": false,
        "<C-v>": false,
        "<C-w>": false,
        "<C-x>": false
    },
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["f", "d"],
            "after": ["<Esc>"]
        }
    ],
    "vim.leader": "<space>",
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["<C-n>"],
            "after": [],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        },
        {
            "before": ["f", "s"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                }
            ]
        }
    ]
}