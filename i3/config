set $alt Mod1
set $win Mod4
set $psst --no-startup-id

new_window pixel 0
new_float pixel 3
hide_edge_borders smart

set $gaps_default 50
set $gaps_code 0
set $gaps_term 100
set $gaps_music 100
set $gaps_web 0
set $gaps_task 20

gaps inner $gaps_default

font pango:MesloLGSDZ Nerd Font 9

focus_follows_mouse no
bindsym $win+Shift+q kill
bindsym --release $win+x exec xkill

bindsym $alt+Tab exec rofi -show window
bindsym $win+d exec rofi -show run
bindsym $win+o exec rofi -show drun

bindsym XF86AudioNext exec $psst mpc next
bindsym $win+bracketright exec $psst mpc next
bindsym XF86AudioPrev exec $psst mpc prev
bindsym $win+bracketleft exec $psst mpc prev
bindsym XF86AudioStop exec $psst mpc stop
bindsym XF86AudioPlay exec $psst mpc toggle
bindsym $win+backslash exec $psst mpc toggle

# Workspaces settings
workspace_auto_back_and_forth yes

set $w_web "1:web"
workspace $w_web gaps inner $gaps_web
bindsym $win+g exec $psst start_web
bindsym $win+Shift+g move container to workspace $w_web

set $w_term "2:term"
workspace $w_term gaps inner $gaps_term
bindsym $win+space exec $psst start_term

set $w_code "3:code"
workspace $w_code gaps inner $gaps_code
bindsym $win+c exec $psst start_code

set $w_music "4:music"
workspace $w_music gaps inner $gaps_music
bindsym $win+m exec $psst start_music

set $w_pass "5:pass"
assign [class="keepassxc"] $w_pass
bindsym $win+p exec $psst start_pass

set $w_slack "6:slack"
assign [class="Slack"] $w_slack
bindsym $win+t exec $psst start_slack

set $w_task "7:task"
workspace $w_task gaps inner $gaps_task
bindsym $win+BackSpace exec $psst start_task

set $w_dotfiles "10:dotfiles"
bindsym $win+u workspace $w_dotfiles

set $w_term1 "11:term"
workspace $w_term1 gaps inner $gaps_term
bindsym $win+1 workspace $w_term1

set $w_term2 "12:term"
workspace $w_term2 gaps inner $gaps_term
bindsym $win+2 workspace $w_term2

set $w_term3 "13:term"
workspace $w_term3 gaps inner $gaps_term
bindsym $win+3 workspace $w_term3

set $w_term4 "14:term"
workspace $w_term4 gaps inner $gaps_term
bindsym $win+4 workspace $w_term4

set $w_term5 "15:term"
workspace $w_term5 gaps inner $gaps_term
bindsym $win+5 workspace $w_term5

set $w_term6 "16:term"
workspace $w_term6 gaps inner $gaps_term
bindsym $win+6 workspace $w_term6

set $w_term7 "17:term"
workspace $w_term7 gaps inner $gaps_term
bindsym $win+7 workspace $w_term7

set $w_term8 "18:term"
workspace $w_term8 gaps inner $gaps_term
bindsym $win+8 workspace $w_term8

set $w_term9 "19:term"
workspace $w_term9 gaps inner $gaps_term
bindsym $win+9 workspace $w_term9

bindsym $win+period workspace next
bindsym $win+comma workspace prev

bindsym $win+v split v
bindsym $win+Shift+v split h

bindsym $win+F12 exec "$HOME/.dotfiles/bin/lock"

exec_always $psst $HOME/.dotfiles/polybar/launch
exec $psst $HOME/.dotfiles/bin/autostart

bindsym $win+Return exec cd $(xcwd) && exec termite

floating_modifier $win

bindsym $win+h focus left
bindsym $win+j focus down
bindsym $win+k focus up
bindsym $win+l focus right

bindsym $win+Shift+h move left
bindsym $win+Shift+j move down
bindsym $win+Shift+k move up
bindsym $win+Shift+l move right

bindsym $win+f fullscreen toggle

bindsym $win+s layout stacking
bindsym $win+w layout tabbed
bindsym $win+e layout toggle split

bindsym $win+Shift+space floating toggle

bindsym $win+Shift+c reload
bindsym $win+Shift+r restart
bindsym $win+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $win+r mode "resize"

# vim:ft=conf
