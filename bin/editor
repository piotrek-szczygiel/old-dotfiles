#!/bin/zsh -f

if [ -z "$@" ]; then
    file=`pwd`
else
    file="$@"
fi

if type emacsclient; then
    emacsclient -c --alternate-editor emacs "${file}"
elif type nvim; then
    nvim "${file}"
elif type vim; then
    vim "${file}"
elif type vi; then
    vi "${file}"
elif type nano; then
    nano "${file}"
else
    echo "No editor found!"
fi
