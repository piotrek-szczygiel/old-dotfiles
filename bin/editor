#!/bin/zsh -f

if [ -z "$@" ]; then
    file=`pwd`
else
    file="$@"
fi

if type emacsclient > /dev/null; then
    emacsclient -c --alternate-editor emacs "${file}"
elif type nvim > /dev/null; then
    nvim "${file}"
elif type vim > /dev/null; then
    vim "${file}"
elif type vi > /dev/null; then
    vi "${file}"
elif type nano > /dev/null; then
    nano "${file}"
else
    echo "No editor found!"
fi
