#!/usr/bin/env bash

if [ -z "$1" ]; then
    echo "No argument supplied!"
else
    if [[ -x "$1" ]]; then
        "$1"
    else
        filetype=$(file --mime-type -b -L "$1" 2> /dev/null)
        filename=$(basename "$1" 2> /dev/null)

        case "$filetype" in
            "text/x-c")
                runpath="/tmp/$filename.run"
                g++ "$1" -o "$runpath"

                if [[ -x "$runpath" ]]; then
                    "$runpath"
                fi
                ;;

            "text/x-python")
                python "$1"
                ;;

            *)
                echo "Unsupported filetype: $filetype"
                ;;
        esac

    fi
fi
