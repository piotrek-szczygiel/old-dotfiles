#!/usr/bin/env bash

i3-msg -t get_workspaces | grep "4:music" > /dev/null 2>&1
status=$?
i3-msg "workspace 4:music" > /dev/null 2>&1

if [ $status -ne 0 ]; then
    termite -e "fish -c ncmpcpp" &
    sleep 0.1
    termite -e "fish -c vis" &
    sleep 0.1
    i3-msg "focus left" > /dev/null 2>&1
fi
